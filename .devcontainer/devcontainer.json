// For format details, see https://aka.ms/devcontainer.json. For config options, see the
// README at: https://github.com/devcontainers/templates/tree/main/src/docker-in-docker
{
	"name": "Sample Microservices w/ Skyramp",
	// "image": "mcr.microsoft.com/devcontainers/base:bullseye",
	"build": {
		"dockerfile": "Dockerfile",
		"context": "."
	},
	"features": {
		"ghcr.io/devcontainers/features/docker-in-docker:2": {
			"version": "latest",
			"enableNonRootDocker": "true",
			"moby": "true"
		},
		"ghcr.io/devcontainers/features/sshd:1": {
			"version": "latest"
		}
	},
	"runArgs": [
		"--init",
		"--privileged"
	],
	"overrideCommand": false,
	"secrets": {
		"ECR_TOKEN": {
			"description": "This is the token for ECR authentication."
		}
	},
	"containerEnv": {
		"SKY_CODESPACE_NAME": "${env:CODESPACE_NAME}",
		"NEW_PASSWORD": "password"
	},
	"portsAttributes": {
		"2222": {
			"label": "ssh port"
		},
		"3000": {
			"label": "Dashboard",
			"onAutoForward": "openPreview"
		}
	},
	// Use 'forwardPorts' to make a list of ports inside the container available locally.
	"forwardPorts": [
		2222,
		3000
	],
	"appPort": [
		3000
	],
	// "forwardPorts": [],
	// Use 'postCreateCommand' to run commands after the container is created.
	"postCreateCommand": {
		// "command": "echo \"cs name ==============\n$SKY_CODESPACE_NAME\n\nnew password ==============\n$NEW_PASSWORD\n\n\" && echo \"vscode:random\" | sudo chpasswd"
		"command": "gh codespace ports visibility 3000:public -c $CODESPACE_NAME" // "/etc/skyramp/startup.sh "
	},
	//"postAttachCommand": "gh codespace ports visibility 3000:public -c $CODESPACE_NAME"
	// Configure tool-specific properties.
	// "customizations": {},
	// Uncomment to connect as root instead. More info: https://aka.ms/dev-containers-non-root.
	// "remoteUser": "root"
}